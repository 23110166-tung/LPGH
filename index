<script>

// ===== PASSWORD =====
function checkPassword(){
    let pass = document.getElementById("password").value;
    if(pass === "iloveyou"){
        document.getElementById("loginBox").style.display="none";
        document.getElementById("card").style.display="flex";
        document.body.style.overflow="auto";
        document.getElementById("music").play();
        typeWriter();
        calculateDays();
        createHearts();
    }else{
        alert("Sai m·∫≠t kh·∫©u r·ªìi b√© ∆°i üòù");
    }
}

// ===== TYPE EFFECT =====
let text = "C·∫£m ∆°n em ƒë√£ ƒë·∫øn b√™n anh. Ch√∫c em lu√¥n xinh ƒë·∫πp, h·∫°nh ph√∫c v√† m√£i l√† c√¥ng ch√∫a trong l√≤ng anh. Anh y√™u em r·∫•t nhi·ªÅu ‚ù§Ô∏è";
let i = 0;

function typeWriter(){
    if(i < text.length){
        document.getElementById("message").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 50);
    }
}

// ===== COUNT LOVE DAYS =====
function calculateDays(){
    let startDate = new Date("2024-05-20");
    let today = new Date();
    let diff = today - startDate;
    let days = Math.floor(diff/(1000*60*60*24));
    document.getElementById("days").innerHTML = "Ch√∫ng ta ƒë√£ b√™n nhau ƒë∆∞·ª£c " + days + " ng√†y ‚ù§Ô∏è";
}

// ===== HEART RAIN =====
function createHearts(){
    setInterval(()=>{
        let heart = document.createElement("div");
        heart.className="heart";
        heart.innerHTML="‚ù§Ô∏è";
        heart.style.left=Math.random()*100+"vw";
        heart.style.fontSize=(Math.random()*20+10)+"px";
        document.body.appendChild(heart);
        setTimeout(()=>{heart.remove()},5000);
    },300);
}

